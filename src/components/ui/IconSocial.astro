---
import { Image } from 'astro:assets';

interface IconSocialProps {
  src: string;
  alt: string;
}

const { src, alt} = Astro.props as IconSocialProps;
---

<Image src={src} alt={alt} width={10} height={10} class=`size-10 shadow-lg z-10 object-contain hover:scale-110 hover:-translate-y-1 transition-transform duration-300` />