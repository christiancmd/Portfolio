---
import { Image } from 'astro:assets';
interface Props {
    title: string;
    side: string;
    techs: string[]; // Idealmente, esto podría ser un objeto { name: string, icon: string }
}


const ICON_MAP: Record<string, string> = {
  "HTML5": "/icon/html.svg",
  "CSS3": "/icon/css.svg",
  "JAVASCRIPT (E6S+)": "/icon/javascript.svg",
  "TYPESCRIPT": "/icon/typescript.svg",
  "REACT.JS": "/icon/react.svg",
  "TAILWDINDCSS": "/icon/dark-tailwind.svg",
  "ASTRO.JS": "/icon/astro.svg",
  "VITE": "/icon/vite.svg",
  "POSTGRESQL": "/icon/postgresql.svg",
  "SQLITE": "/icon/sqlite.svg",
  "MYSQL": "/icon/mysql.svg",
  "SUPABASE": "/icon/supabase.svg",
  "NODE.JS": "/icon/nodejs.svg",
  "PYTHON": "/icon/python.svg",
  "PHP": "/icon/php.svg",
  "DJANGO DRF": "/icon/django.svg",
  "POSTMAN": "/icon/postman.svg", 
  "THUNDER CLIENT": "/icon/thunder.svg",
  "GIT": "/icon/git.svg",
  "GITHUB": "/socials/github.svg",
  "DOCKER": "/icon/docker.svg",
   "EXCALIDRAW": "/icon/excalidraw.svg",
   "VERCEL": "/icon/vercel.svg",
   "NPM": "/icon/npm.svg",
   "PNPM": "/icon/pnpm.svg",
   "LINUX": "/icon/linux.svg",
   "EXCEL": "/icon/excel.svg",
   "ASANA": "/icon/asana.svg"
}
  


const { title, side, techs } = Astro.props;
---

<article class="group relative h-full w-full max-w-sm lg:max-w-md mx-auto">
    <div class="absolute -inset-0.5 bg-linear-to-r from-blue-600 to-cyan-500 rounded-2xl blur opacity-20 group-hover:opacity-40 transition duration-500"></div>
    
    <div class="relative h-full bg-slate-900 rounded-xl border border-slate-800 shadow-xl overflow-hidden flex flex-col">
        
        <header class="p-5 border-b border-slate-800 bg-slate-800/30">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-[10px] font-black uppercase tracking-[0.2em] text-yellow-500 mb-1">
                        {side}
                    </p>
                    <h3 class="text-xl font-bold text-white group-hover:text-blue-800  transition-all duration-200">
                        {title}
                    </h3>
                </div>
                <div class="p-2 rounded-lg text-yellow-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                    </svg>
                </div>
            </div>
        </header>

        <main class="p-5 grow">
            <ul class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                {techs.map((tech) => (
                    <li class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-slate-300 bg-slate-800/50 border border-slate-700 rounded-lg group/item hover:border-blue-400 dark:hover:border-blue-500 hover:bg-slate-800 transition-all duration-200">
                        <div class="shrink-0 w-6 h-6 flex items-center justify-center rounded shadow-sm group-hover/item:scale-110 transition-transform">

                            <Image
                                src={ICON_MAP[tech as keyof typeof ICON_MAP] || "/icon/frontend.svg"} 
                                alt={`Logo de ${tech}`}
                                class="size-6 object-contain"
                                width={24}
                                height={24} 
                            />
                        </div>
                
                        <span class="truncate text-white" title={tech}>{tech}</span>
                    </li>
                ))}
            </ul>
        </main>
        
        <footer class="px-5 py-3 bg-slate-800/10 border-t border-slate-800 text-[10px] text-slate-400 italic">
            Para Producción
        </footer>
    </div>
</article>