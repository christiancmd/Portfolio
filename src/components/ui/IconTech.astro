---
import { Image } from 'astro:assets';
interface IconTechProps {
  src: string;
  alt: string;
  style?: string;
}

const { src, alt, style } = Astro.props as IconTechProps;
---

<Image
  src={src} 
  alt={alt}
  width={40}
  height={40} 
  class={`${style} absolute size-10 md:size-12 lg:size-14 bg-white p-1.5 md:p-2 rounded-full shadow-lg border border-gray-100 z-10 object-contain`}
/>